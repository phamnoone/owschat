<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:touchscreenBlocksFocus="false"
    android:id="@+id/activity_main"
    android:background="#ffffffff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtID"
        android:background="#ff63fdff"
        android:textSize="30dp"
        android:textColor="#ffff0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_below="@+id/txtID"
        android:id="@+id/space"
        android:layout_toLeftOf="@+id/bntLogIn" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPass"
        android:textColor="#ffff0000"
        android:background="#ff63fdff"
        android:textSize="30dp"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/bntLogIn"
        android:src="@drawable/log_in"
        android:layout_below="@+id/txtPass"
        android:layout_alignRight="@+id/txtPass"
        android:layout_alignEnd="@+id/txtPass" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bntForgot"
        android:src="@drawable/kgpg_key1"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/bntSignedUp"
        android:src="@drawable/sign_up"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Trường họp chưa có tài khoản vào đây để đăng kí"
        android:id="@+id/textView15"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/bntLogIn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:id="@+id/textView16"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/bntSignedUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/ows1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
