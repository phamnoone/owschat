<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/a">

        <ImageView
            android:background="@null"
            android:id="@+id/postThumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/your_avatar"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtDiaryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="+849xxxxxxxx"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/postThumb"
            android:layout_alignLeft="@+id/id"
            android:layout_alignStart="@+id/id" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="id"
            android:id="@+id/id"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/postThumb"
            android:layout_toRightOf="@+id/postThumb"
            android:layout_toEndOf="@+id/postThumb" />

        <ImageButton
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bntChatWC"
            android:src="@drawable/wc1"
            android:layout_alignTop="@+id/id"
            android:layout_alignRight="@+id/id"
            android:layout_alignEnd="@+id/id" />
    </RelativeLayout>
</LinearLayout>
